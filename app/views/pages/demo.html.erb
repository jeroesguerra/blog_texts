<div class="max-w-xs border border-2 border-black rounded-md">
    <form class="new_message" id="new_message" action="<%= ENV['BASE_URL'] %>/messages" accept-charset="UTF-8" method="post">
        <div class="pb-7 pt-4 flex items-center gap-x-2 bg-brand-blue">
            <div class="pl-4">
                <img src="https://via.placeholder.com/60x60" class="rounded-full" alt="">
            </div>
            <div class="">
                Welcome message here
            </div>

        </div>

        <div class="p-4 pb-0">
            <div class="grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-6">
                <div class="sm:col-span-6">
                    <label for="message_name" class="block text-sm font-medium leading-6 text-gray-900">Name</label>
                    <div class="mt-1">
                        <input type="text" id="message_name" name="message[name]" required="required" placeholder="Jero" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                </div>

                <div class="sm:col-span-6">
                    <label for="message_email" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
                    <div class="mt-1">
                        <input type="email" id="message_email" name="message[email]" required="required" placeholder="jero@jeroesguerra.com" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                </div>

                <div class="sm:col-span-6">
                    <label for="message_content" class="block text-sm font-medium leading-6 text-gray-900">Message</label>
                    <div class="mt-2">
                        <textarea id="message_content" name="message[content]" required rows="6" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="pt-5">
            <div class="flex justify-end">
                <button type="submit" class="w-full inline-flex justify-center rounded-t-md rounded-b-sm border border-transparent bg-brand-blue hover:bg-brand-blue-dark py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Send</button>
            </div>
        </div>
    </form>
</div>